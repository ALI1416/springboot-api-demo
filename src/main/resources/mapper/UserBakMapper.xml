<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.dao.UserBakDao">

	<sql id="col">id,ref_id,account,pwd,name,gender,year,profile,comment,qq_openid,is_delete,create_id,create_time,update_id,update_time,version
	</sql>
	<sql id="colRef">id,account,pwd,name,gender,year,profile,comment,qq_openid,is_delete,create_id,create_time,update_id,update_time,version
	</sql>

	<insert id="insert" parameterType="UserBak">
		INSERT
		user_bak(
		<include refid="col" />
		)
		SELECT
		#{id},
		<include refid="colRef" />
		FROM
		user
		WHERE
		id=#{refId}
	</insert>

</mapper>